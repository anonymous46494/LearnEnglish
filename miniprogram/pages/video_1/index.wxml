      <view class="other_img_wrap">
        <image mode="widthFix" src="{{othersList[index].img}}"></image>
      </view>
      <!-- 视频详情 -->
      <view class="other_info">
        <!-- 标题 -->
        <view style="bold;color: #fff">{{othersList[index].name}}</view>
        <view class="other_title">{{othersList[index].title}}</view>
        <view class="other_title">{{othersList[index].about}}</view>
      </view>
    </view>
    <view style="text-align:center;">---没有更多啦---</view>
  </view>
</view>


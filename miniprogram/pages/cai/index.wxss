
.container {
  background-image: linear-gradient( 135deg, #3B2667 10%, #BC78EC 100%);
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}

.txt{
  margin-top: -80rpx;
  width: 100%;
  font-size: 30px;
  color: #fff;
  text-align: center;
  font-family: 'Times New Roman';
}
.c-display {
  background-image: linear-gradient( 135deg, #ABDCFF 10%, #0396FF 100%);
  width: 95%;
  margin: 30rpx 0;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 16rpx;
}

/*视图操作栏  */

.display-opts {
  width: 30%;
  height: 100%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.btn-alert {
  padding: 10rpx;
  border-width: 4rpx;
  border-radius: 10rpx;
  color: white;
  background-color: #fcb545;
}


/*视图图片显示区  */

.display-content {
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.display-content_hover{
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  animation-name: img;
  animation-duration: 2.0s;
  animation-timing-function: linear;
  animation-iteration-count: 1;
}

@keyframes img {
  from {
    transform: scale3d(1, 1, 2);
  }

  10%,
  20% {
    transform: scale3d(0.9, 0.9, 0.9) rotate3d(0, 0, 1, -3deg);
  }

  30%,
  50%,
  70%,
  90% {
    transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, 3deg);
  }

  40%,
  60%,
  80% {
    transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, -3deg);
  }

  to {
    transform: scale3d(1, 1, 1);

  }
}
.content-img {
  width: 100%;
  max-height: 350rpx;
}

.display-others {
  width: 10%;
}

.c-opts {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.opts-others {
  width: 10%;
}

.opts-content {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 50rpx;
}

.opts-score {
  width: 10%;
}

.content-input {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: white;
  border-radius: 10rpx;
  width: 50rpx;
  border-bottom: 1px solid rgb(0, 0, 0);
}

.c-select {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin-bottom: 100rpx;
}

.select-index {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #852200;
  margin: 10rpx 10rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-image: linear-gradient( 135deg, #C2FFD8 10%, #465EFB 100%);
}
text{
  font-size: 50rpx;
  font-weight:bold;
}
@keyframes blink {
  0%, 100% {
    background-color: rgb(0, 0, 0);
    }
  50% {
    background-color: transparent;
  } 
  }

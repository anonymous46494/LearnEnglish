.header{
  height:100rpx;
  display: flex;
  padding-left:20rpx;
  padding-right:20rpx;
  align-items: center;
  flex-direction: row;
  background: #fff;
}

.search{
  width:100%;
  height:70rpx;
  background: rgb(245, 245, 245);
  border-radius:30rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

input{
  font-size: 30rpx;
  color: #888;
  flex:1;
  margin-left: 20rpx;
}


.all{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0rpx 20rpx;

}
.card{
  float: right;
  text-align:center;
  width: 200rpx;
  margin: 15rpx auto;
  border-radius:15%;
}
.zheng_1{
  display: table-cell;
  vertical-align: middle;
  width: 200rpx;
  height: 200rpx;
  border-radius:15%;
  background-image: linear-gradient( 135deg, #69FF97 10%, #00E4FF 100%);
}
.zheng_2{
  display: table-cell;
  vertical-align: middle;
  width: 200rpx;
  height: 200rpx;
  border-radius:15%;
  background-image: linear-gradient( 135deg, #3C8CE7 10%, #00EAFF 100%);
  background-color:rgb(201, 18, 18);
  opacity:1;
}
.zheng_3{
  display: table-cell;
  vertical-align: middle;
  width: 200rpx;
  height: 200rpx;
  border-radius:15%;
  background-image: linear-gradient(to top, #37ecba 0%, #72afd3 100%);
}


image{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
}
text{
  display: block;
}



.container{
  background-image: linear-gradient(-225deg, #2CD8D5 0%, #C5C1FF 56%, #FFBAC3 100%);
}
.swipe{
  width: 90%;
  margin:20rpx auto;
  height: 120rpx;
}
.image1{
  margin-top: 5rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
  border:1rpx rgba(32, 32, 32, 0.24) solid;
}
.text{
  width: 440rpx;
  margin-left: 30rpx;
 }
 .title{
  font-size: 34rpx;
  color: rgb(81, 81, 81);
  line-height: 1.5;
}
.info{
  font-size: 22rpx;
  color: #888;
}
.result1{
  display: flex;
  margin-bottom: 15rpx;
  margin-top: 25rpx;
  box-shadow: 17rpx 5rpx 17rpx rgba(10,16,20,.24),17rpx 5rpx 17rpx rgba(10,16,20,.12);
  background-color: #fff;
  width: 100%;
  border-radius: 4px;
  box-sizing: border-box;
  transition: box-shadow .5s;
  position: relative;
}
.result1:hover{
  box-shadow: 0 8px 8px rgba(10,16,20,.12),0 0 8px rgba(10,16,20,1);
  border: #eee 1rpx solid;
  text-decoration: none;
}
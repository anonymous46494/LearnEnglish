Page {
  height: 100%;
}

.player-wrap {
  height: 100%;
  background-size: 0;
  background-color: rgba(0, 0, 0, 0.5);
  background-position: center;
  background-repeat: no-repeat;
}

.player-wrap::after {
  content: "";
  width: 100%;
  height: 100%;
  background-size: 170%;
  background-image: inherit;
  background-position: inherit;
  background-repeat: inherit;
  filter: blur(10px);
  position: absolute;
  top: 0;
  z-index: -1;
}

.icon-playlist{
  width: 100rpx;
  height: 100rpx;
}
.player {
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.player-phonograph {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.player-stick {
  position: absolute;
  top: -40rpx;
  left: 0;
  right: 0;
  width: 230rpx;
  height: 340rpx;
  margin: 0 auto;
  padding-left: 150rpx;
  transition: 1s;
  transform: rotate(-30deg);
  transform-origin: 190rpx 40rpx;
  z-index: 2;
}

.player-stick-turn {
  transform: rotate(0deg);
}

.player-disc {
  /* position: absolute;
  left: 0;
  right: 0;
  margin: auto; */
  width: 600rpx;
  height: 600rpx;
  margin: 150rpx auto 0;
  transform-origin: center;
  animation-duration: 20s;
  animation-name: discTurn;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-play-state: paused;
  z-index: 1;
}

.player-disc-running {
  animation-play-state: running;
}

.player-cover {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.player-light {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.player-img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 64%;
  height: 64%;
  border-radius: 50%;
}

.player-operation {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 120rpx;
  color: #fff;
}

.txt{
  display: block;
  margin-top: -100rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight:bold;
  color: rgb(13, 194, 67);

}





.icon-last{
  width: 120rpx;
  height: 120rpx;
}
.icon-play{
  width: 160rpx;
  height: 160rpx;
}

.icon-next{
  width: 120rpx;
  height: 120rpx;
}
.player-toolbar {
  width: 100%;
  flex-shrink: 0;
  padding-bottom: 100rpx;
}

.player-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;

}

.player-progress slider {
  flex-grow: 1;
}

.player-progress text {
  /* width: 100rpx; */
  text-align: center;
  word-spacing: nowrap;
  color: #fff;
}

.player-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: rgb(255, 255, 255);
  padding: 0 30rpx;
  margin-top: 50rpx;
}

.player-bar>view {
  font-size: 80rpx;
}

.player-bar>view.icon-play, .player-bar>view.icon-pause {
  font-size: 200rpx;
}

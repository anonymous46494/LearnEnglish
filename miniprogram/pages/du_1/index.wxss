.knows{
  display: flex;
  margin-bottom: 15rpx;
  margin-top: 25rpx;
  justify-content: space-between;
  box-shadow: 17rpx 5rpx 17rpx rgba(10,16,20,.24),17rpx 5rpx 17rpx rgba(10,16,20,.12);
  background-color: #fff;
  width: 100%;
  border-radius: 4px;
  box-sizing: border-box;
  transition: box-shadow .5s;
  position: relative;
}
.knows:hover{
  box-shadow: 0 8px 8px rgba(10,16,20,.12),0 0 8px rgba(10,16,20,1);
  border: #eee 1rpx solid;
  text-decoration: none;
}
.knows .pic{
  width: 230rpx;
  height: 150rpx;
}
.knows .pic image{
  width: 100%;
  height: 100%;
}
.knows .text{
 width: 440rpx;
 display: flex;
 flex-direction: column;
 justify-content: space-between;
}
.knows .title{
  font-size: 34rpx;
  color: rgb(81, 81, 81);
  line-height: 1.5;
}
.knows .info{
  font-size: 22rpx;
  color: #888;
}

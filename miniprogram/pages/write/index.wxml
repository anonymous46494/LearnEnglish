<view class="container">
  <image class="img"src="{{url}}"></image>
  <view class="handCenter">
    <canvas class="handWriting" disable-scroll="true" bindtouchstart="uploadScaleStart" bindtouchmove="uploadScaleMove" bindtouchend="uploadScaleEnd" bindtap="mouseDown" canvas-id="handWriting">
    </canvas>
  </view>
  <button class="button" style="margin-top:10rpx" catchtap="retDraw">重写</button>
  <button class="button" style="margin-top:10rpx" bindtap="wancheng">写完了</button>
  <button class="button" style="margin-top:10rpx" data-index="{{0}}" open-type="share" type="primary">分享我的笔迹</button>
</view>

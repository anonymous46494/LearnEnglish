

page {
  background-color: #f1f1f1;
}
button{
  display: inline-block;
}
.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #e0e0e0;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 100vw;
  height: 10vw;
  background-color: #fff;
  border-radius: 6rpx;
  margin-left: 2vw;
  margin-right: 2vw;
  padding: 0 2vw;
  font-size: 16px;
  color: #222;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}


.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 10rpx;
}
.container1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index:-1;
}

.swiperItem1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: unset;
  z-index: 0.5;
}

.swiperItemActive1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: unset;
  z-index: 1;
}

.imageItem1 {
  height: 300rpx;
  width: 510rpx;
  border-radius: 10rpx;
  margin: 30rpx 0rpx;

}

.active1 {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
  opacity: 1; 
}

.bar{
  height: 50rpx;
  background-image: linear-gradient(to top, #d9afd9 0%, #97d9e1 100%);
  margin-bottom: -8rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 10rpx;
}

.txt{
  font-size: 17px;
  color: rgb(0, 0, 0);
  text-align: center;
  font-family: 'Times New Roman';
  line-height:100%;
}
.txt1{
  font-size: 17px;
  color: rgb(0, 0, 0);
  text-align: center;
  font-family: 'Times New Roman';
  margin-right: 25rpx;
}

.img{
  width: 60rpx;
  height: 60rpx;
  vertical-align:middle;
  margin-top: -5rpx;
}
.img2{
  width: 42rpx;
  height: 42rpx;
  vertical-align:middle;
  margin-top: -5rpx;
}

/*中间*/
.mid{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 25rpx 0;
  text-align: center;
  border-radius: 18rpx;
  box-shadow: 1px 1px 3px #c7c7c7;
  
}
.mid1{
  border-radius:15%;
  width: 135rpx;
  background-image: linear-gradient(to bottom, #88d3ce 15%, #dddddd 70%);
}
.img3{
  width: 80rpx;
  height: 80rpx;
}
.txt2{
  margin-top: -10rpx;
  display: block;
  text-align:center;
}

.bottom{
  text-align: center;
  margin-bottom: 10rpx;
  box-shadow: 0 0 5rpx 0  #888888;
  border-radius:10rpx;
}
.item{
  width: 350rpx;
  height:250rpx;
  border-radius:10rpx;
  border: 1rpx rgb(13, 175, 216) solid;
  margin-top: 10rpx;
}
.list1{
  margin-bottom: 90rpx;
}

.dd{
  width: 100%;
  display: flex;
  justify-content: space-between;

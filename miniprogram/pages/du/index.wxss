.all{
  background-color: #B1F3E4;
}
/* 视频 */
.video_info{
  position: sticky;
  top: 0rpx;
}
 video{
  display: block;
  width:100%;
  margin: 0 auto;
}
.video_title{
  background-color: #B1F3E4;
  justify-content:  space-between;
  font-size: 35rpx;
}

.readingItem{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.readingItem-img{
  width: 100%;
  height: 656rpx;
  box-sizing: border-box;
  border:4rpx solid #452317;
  border-radius: 10rpx;
}

.readingItem-content{
  display: flex;
  flex-flow:column wrap;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 10rpx 20rpx 40rpx 20rpx;
  background-color: #FCAEA0;
  border:4rpx solid #452317;
  border-radius: 10rpx;
}
.item-index{
  font-size: 24rpx;
  color: rgb(100, 100, 100);
}
.readingItem-audio-content{
  display: flex;
  flex-flow:row nowrap;
  justify-content: flex-start;
  height: 100rpx;
  width: 100%;
}
.read-audio-icon{
  display: flex;
  width: 110rpx;
  height: 110rpx;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.read-audio-info{
  display: flex;
  flex-flow:column nowrap;
  justify-content: center;
  align-items: flex-start;
  font-size: 28rpx;
}

.ri-content{
  color: #FFFFFF;
  font-size: 30rpx;
  font-family: 'Times New Roman';
  font-weight:bold;
  margin-bottom: 7rpx;
}
.ri-en_content{
  color: rgb(34, 34, 34);
  font-size: 25rpx;
  margin-bottom: 7rpx;
}

.read-audio-control{
  display: flex;
  flex-flow:row wrap;
  align-items: center;
  width: 100%;
  height: 70rpx;
}

.read-audio-progress{
  width: 340rpx;
}
.read-audio-duration{
  margin-left: 20rpx;
  font-size: 32rpx;
}
.audio-listen{
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}
.audio-record{
  width: 90rpx;
  height: 90rpx;
  margin-left: 24rpx;
}

.submit{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #1ECFA7;
  font-size: 32rpx;
  color: #FFFFFF;
}

.text-success {
  color: #1aad19;
  font-size: 30rpx;
  font-family: 'Times New Roman';
  font-weight:bold;
}
.text-error {
  color: #ff4444;
  font-size: 30rpx;
  font-family: 'Times New Roman';
  font-weight:bold;
}
.text-normal {
  color: #ff4444;
  font-size: 30rpx;
  font-family: 'Times New Roman';
  font-weight:bold;
}
.assessment-text{
  max-width: 100%;
  word-wrap:break-word;
  
}
.bottom{
  padding: 0 20rpx;
  height: 300rpx;

}

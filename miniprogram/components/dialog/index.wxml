<!--components/dialog/index.wxml-->
<view class='container' style="display: {{isShow ? '' : 'none'}}">
  <view class='c-title'>
    <text class="txt">提示信息</text>
  </view>
  <view class='c-content'>
    <view wx:if="{{isPass}}">
      <view>
        <text class="txt">恭喜回答正确！</text>
      </view>
    </view>
    <view wx:else>
      <view>
        <text class="txt">回答错误，要不再试试？</text>
      </view>
    </view>
  </view>

  <view class='c-btn'>
    <view class="btn-success" wx:if="{{isPass}}" bindtap='onNext'>
      <text class="txt1">下一题</text>
    </view>
    <view class='btn-error' wx:else>
      <view class='btn-retry' bindtap='onRetry'>
        <text class="txt1">再试试</text>
      </view>
      <view class="btn-ignore" bindtap='onNext'>
        <text class="txt1">跳过</text>
      </view>
    </view>
  </view>
</view>